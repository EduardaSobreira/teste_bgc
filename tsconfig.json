{
  "compilerOptions": {
    "target": "ES2019",                                 
    "module": "commonjs",     
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,                          
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                                
  },
  "include": [
    "./src"
  ]
}
